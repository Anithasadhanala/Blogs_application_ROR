
<h1>Blogs</h1>



<div class="search">
  <%= form_with url: blogs_path, method: :get, local: true do %>
    <%= text_field_tag :search, params[:search], placeholder: "Search blogs", class: "form-control" %>
    <%= submit_tag 'Search', class: "btn btn-primary btn-sm" %>
  <% end %>
</div>




<div class="categories">
  <% @categories.each do |category| %>
    
    <%= link_to category.name, blogs_path(category_id: category.id), method: :get, class: "btn btn-warning btn-sm" %>
  
  <% end %>
  <%= button_to 'All', blogs_path, method: :get, class: "btn btn-primary btn-sm" %>
</div>







<div id="blogs">
<% if @blogs.present? %>
  <% @blogs.each do |blog| %>
    <%= render blog %>
    <p>
    </p>
  <% end %>
  <% end %>
</div>

<%= link_to "New blog", newblog_path %>
